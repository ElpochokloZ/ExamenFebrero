<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/azul">
    
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/music_img"
        android:background="@drawable/ic_launcher_background"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/musicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/music_img"
        android:text="nombre archivo"
        android:textColor="@color/black"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/itemSongArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="127dp"
        android:layout_toEndOf="@+id/music_img"
        android:text="Artista archivo"
        android:textColor="@color/black"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/itemSongDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="235dp"
        android:layout_toEndOf="@+id/music_img"
        android:text="Duracion Archivo"
        android:textColor="@color/black"
        android:textSize="8sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="38dp"
        android:layout_height="29dp"
        android:layout_marginStart="306dp"
        android:layout_toEndOf="@+id/music_img"
        android:layout_centerVertical="true"
        android:text="Play"
        android:textSize="5dp" />

</RelativeLayout>